<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/strategy_name_text"
        style="@style/TextAppearance.MaterialComponents.Caption"
        tools:text="RSI Strategy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="5dp"
        android:paddingHorizontal="6dp"
        android:paddingVertical="1dp"
        app:layout_constraintBottom_toTopOf="@+id/date_range_text"
        app:layout_constraintStart_toEndOf="@+id/symbol_text" />

    <TextView
        android:id="@+id/date_range_text"
        style="@style/TextAppearance.MaterialComponents.Caption"
        tools:text="17 Sep 20 - 16 Sep 21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/symbol_text" />

    <TextView
        android:id="@+id/symbol_text"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        tools:text="TSLA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>