<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_marginVertical">10dp</item>
    </style>

    <style name="layout_padding">
        <item name="android:padding">20dp</item>
    </style>

    <style name="padding_vertical">
        <item name="android:paddingVertical">10dp</item>
    </style>

    <style name="margin">
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="section_margin_vertical">
        <item name="android:layout_marginVertical">20dp</item>
    </style>

    <style name="margin_vertical">
        <item name="android:layout_marginVertical">10dp</item>
    </style>

    <style name="Widget.App.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
        <item name="background">@color/material_grey_900</item>
    </style>

    <style name="default_card_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MySpinnerDatePickerStyle">
        <item name="android:datePickerStyle">@style/MySpinnerDatePicker</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="MySpinnerDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="round_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">15sp</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:layout_marginVertical">10dp</item>
    </style>

</resources>